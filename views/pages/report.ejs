<html>

<head>
    <% include ../partials/header.ejs %>
</head>

<body>

    <% include ../partials/nav.ejs %>

        <body>
            <div class="container">

                <h1>Report ID
                    <%= result[0].report_id %>
                </h1>

                <h2>Weather</h2>
                <p>
                    <strong>High:</strong>
                    <%= result[0].report_weather_high + " degrees"%>
                </p>
                <p>
                    <strong>Low:</strong>
                    <%= result[0].report_weather_low + " degrees"%>
                </p>
                <p>
                    <strong>Conditions:</strong>
                    <%=result[0].report_weather_conditions %>.</p>

                <h2>Rental Equipment On Site</h2>
                <p>
                    <%= result[0].report_rental_equip %>
                </p>

                <h2>Report Notes:</h2>
                <p>
                    <%= result[0].report_content %>
                </p>
                <p>
                    <%= result[i].issue_content %>
                </p>
                <h2>Workers Info</h2>
                <% for (var i = 0; i< result.length; i++){%>
                    <h4>
                        <strong>
                            <%= result[i].workers_category %>
                        </strong>
                    </h4>
                    <p>
                        <%= result[i].workers_number %> workers for the
                            <%= result[i].workers_category %> contractors on site.
                    </p>
                    <strong>
                        <%= result[i].workers_category %> Work Completed:</strong>
                    <p>
                        <%= result[i].workers_content %>
                    </p>
                    <hr/>
                    <% }%>

                        <p>
                            <img src='<%= result[0].images_upload %>'>
                        </p>
            </div>
        </body>

</html>